<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div id="topic">
        <p>
            <b>Love yourself, start with new clothes</b>
        </p>
    </div>

    <nav id="nav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="切换导航" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1" >
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Category", "index", "Categories", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Clothing", "index", "Clothings", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                @using (Html.BeginForm("Index", "Clothings", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <!-- 使用input group包裹搜索框和按钮 -->
                            @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search" })
                            <span class="input-group-btn" style="margin-left: 10px;">
                                <!-- input group 按钮 -->
                                <button type="submit" class="btn btn-secondary">Submit</button>
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>
    <div id="imageLeft">
        <p><img width="100%" height="500" alt="Cycle Pathology" src="~/Content/Images/image1.jpg" /></p>
    </div>

    <div class="container body-content">
        @RenderBody()
        
    </div>

    <footer id="contact" style="margin-bottom: -100%;" >
        <hr />
        Contact us:<br />
        email:<a href="mailto:123456789.com">123456789.com</a>.<br>
        phone:<a href="tel:1234567890">1234567890</a>.<br>
        Written by Yuxin Yang-22009115.<br>
        Visit us at: Hebei University of Technology<br>.<br />
        <p>&copy; @DateTime.Now.Year - Dress freely and showcase your beauty</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
