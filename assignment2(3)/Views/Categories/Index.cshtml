@model IEnumerable<assignment2_3_.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2 class="h2" >Costume appreciation collection</h2>



<style>
    .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 20px;
     
    }

    .grid-item {
        text-align: center;
        padding: 15px;
        border: 1px solid #ccc;
        transition: transform 0.3s ease;
        background-color: rgb(188, 103, 103);
        
    }

        .grid-item:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }
    .image6ge{
        margin-top:10px;
        width:75%;
    }
</style>
<body>
    <div class="grid">

        @{
            var items = new[] {
        new { ImageUrl = Url.Content("~/Content/Images/image16.jpg"), Title1 = "Charm Collection",Title2 = "Women's clothing", Link = Url.Action("Index", "Clothings") },
        new { ImageUrl = Url.Content("~/Content/Images/image5.jpg"), Title1 = "Vogue Collection",Title2 = "Men's clothing", Link = Url.Action("Index", "Clothings") },
        new { ImageUrl = Url.Content("~/Content/Images/image15.jpg"), Title1= "Cute Collection",Title2 = "Children's clothing", Link = Url.Action("Index", "Clothings") },
        new { ImageUrl = Url.Content("~/Content/Images/image17.jpg"), Title1 = "shining Collection", Title2 = "Jewelry",Link = Url.Action("Index", "Clothings") },
        new { ImageUrl = Url.Content("~/Content/Images/image18.jpg"), Title1 = "comfortable Collection",Title2 = "Shoes", Link = Url.Action("Index", "Clothings") },
        new { ImageUrl = Url.Content("~/Content/Images/image7.jpg"), Title1 = "formal Collection",Title2 = "Dresses", Link = Url.Action("Index", "Clothings") }
    };
        }

        @foreach (var item in items)
        {
            <div class="grid-item">
                <img class="image6ge" width="250" height="200" src="@item.ImageUrl" alt="@item.Title2">
                <h3 class="h3">@item.Title1</h3>
                
                @Html.ActionLink(@item.Title2, "Index", "Clothings", new { Category = @item.Title2 },
        new { style = "text-decoration: none;color: rgb(133, 47, 158); " +
        "font-size: 23px;font-family: Comic Sans MS;" })
            </div>
        }

    </div>

    <div class="page-trans">
        @Html.ActionLink("Back Home", "Index", "Home", null, new
   {
       style = "text-align: center; margin:30px; text-decoration: " +
       "none;color: rgb(133, 47, 158);font-size: 30px;font-family: Comic Sans MS; "
   })

    </div>

</body>
